{
  "name": "super",
  "displayName": "SuperHTML",
  "description": "Language Server for HTML and SuperHTML Templates.",
  "repository": "https://github.com/kristoff-it/superhtml/",
  "publisher": "LorisCro",
  "version": "0.5.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "contributes": {
    "configurationDefaults": {
      "[html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "LorisCro.super",
        "files.eol": "\n"
      },
      "[superhtml]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "LorisCro.super",
        "files.eol": "\n"
      }
    },
    "languages": [
      {
        "id": "superhtml",
        "aliases": [
          "SuperHTML",
          "Super HTML",
          "superhtml",
          "shtml",
          "super"
        ],
        "extensions": [
          ".shtml"
        ],
        "configuration": "./superhtml.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "text.superhtml.basic",
        "path": "./syntaxes/superhtml.tmLanguage.json",
        "embeddedLanguages": {
          "text.superhtml": "superhtml",
          "source.css": "css",
          "source.js": "javascript"
        },
        "tokenTypes": {
          "meta.tag string.quoted": "other"
        }
      },
      {
        "language": "superhtml",
        "scopeName": "text.superhtml.derivative",
        "path": "./syntaxes/superhtml-derivative.tmLanguage.json",
        "embeddedLanguages": {
          "text.superhtml": "superhtml",
          "source.css": "css",
          "source.js": "javascript",
          "source.python": "python",
          "source.smarty": "smarty"
        },
        "tokenTypes": {
          "meta.tag string.quoted": "other"
        }
      }
    ]
  },
  "main": "./out/extension",
  "browser": "./out/extension",
  "extensionDependencies": [
    "ms-vscode.wasm-wasi-core"
  ],
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.92.0",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@vscode/vsce": "^2.24.0",
    "@vscode/wasm-wasi-lsp": "^0.1.0-pre.7",
    "camelcase": "^7.0.1",
    "esbuild": "^0.12.1",
    "lodash-es": "^4.17.21",
    "lodash.debounce": "^4.0.8",
    "mkdirp": "^2.1.3",
    "vscode-languageclient": "^10.0.0-next.12",
    "which": "^3.0.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run build-base -- --minify",
    "build-base": "esbuild --bundle --external:vscode src/extension.ts --outdir=out --platform=node --format=cjs",
    "build": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch",
    "lint": "eslint . --ext .ts"
  }
}